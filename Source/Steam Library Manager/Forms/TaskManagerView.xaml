                                </Style>
                            </Grid.Style>
                            <CheckBox Content="{l:Static p:Resources.Forms_TaskManager_Compress}" IsChecked="{Binding Compress}" Margin="360,0,0,0" />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
